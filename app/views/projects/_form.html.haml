= render 'partials/error_messages', :object => @project, :as => :object
= form_for @project do |f|
  = f.text_field :name, :placeholder => 'Name'
  %br
  = f.text_field :url, :placeholder => 'Url'
  %br
  = select_tag "skills", options_from_collection_for_select(Skill.all, "id", "name"), :multiple => true
  %br
  = f.text_area :caption, :placeholder => 'Caption', :rows => 5
  %br
  = f.text_area :description, :placeholder => 'Description', :rows => 5
  
  .actions
    = f.submit 'Save'
